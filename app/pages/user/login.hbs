<form action="/user/login" method="post">
<div class="text-center justify-center pt-28">
        <p class="text-center text-3xl">Log in</p>

        <div class="inline-flex flex-col text-center justify-center h-15 pt-16">
          <input class="p-2 m-2"type="text" name="username" placeholder="username" required>
          <input class="p-2 m-2" type="password" name="password" placeholder="password" required>
          <a class="p-1 m-2" href="/user/forgot">Forgot your password?</a>
          <button class="hover:text-[#5696FF] rounded border-2 border-solid p-4 bg-[#101F5A] hover:border-[#5696FF]" type="submit">Log in</button>
        </div>
    </div>

</form>
